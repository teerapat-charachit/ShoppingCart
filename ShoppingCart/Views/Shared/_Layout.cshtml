<!DOCTYPE html>
<html lang="en">
<head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - ShoppingCart</title>
        <link rel="stylesheet" href="~/css/Journal.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/ShoppingCart.styles.css" asp-append-version="true" />
</head>
<body>
        <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand " href="#">GIWSHOP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                            <li class="nav-item dropdown">
                            <a class="nav-link  dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">basic information</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="empdatas" asp-action="Index">manage Employee</a>
                                
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="" asp-controller="Categories" asp-action="Index">manage Category</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Index5">manage Product</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Orders" asp-action="Index">ReportOrder</a>
                        </li>
                        
                    </ul>
                   
                </div>
            </div>
        </nav>
        </header>
        <div class="container">
                <main role="main" class="pb-3">
                        <div class="row">
                                <div class="col-3">
                                        <vc:categories />

                                        <div class="bg-success mt-3 p-3 text-white">
                                                <vc:small-cart />
                                        </div>
                                </div>
                                <div class="col">
                                        <partial name="_NotificationPartial" />
                                        @RenderBody()
                                </div>
                        </div>
                </main>
        </div>

        <footer class="border-top footer text-muted">
                <div class="container">
                        &copy; 2022 - ShoppingCart - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
