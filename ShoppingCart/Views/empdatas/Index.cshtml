@model IEnumerable<ShoppingCart.Models.empdata>

@{
    ViewData["Title"] = "Index";
}

<h1>Information Employee</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr class="table-dark">
            <th>
                Name
            </th>
            <th>
                Lastname
            </th>
            <th>
                Nickname
            </th>
            <th>
                Gen
            </th>
            <th>
                Phone
            </th>
  
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
         <tr class="table">
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nickname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                    <a class="btn btn-secondary"  asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-success"  asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
